---

interface Props {
  title : string
}

const { title } = Astro.props;

---

<header class=" rounded-t-[1.4rem] ">
  <article class="flex pt-4 px-4 gap-4">
    <div class="flex-inline--center flex-row gap-2 [&>span]:rounded-full [&>span]:w-[0.7rem] [&>span]:h-[0.7rem]">
      <span class="bg-transparent border border-[rgba(82,78,78,0.65)]"></span>
      <span class="bg-transparent border border-[rgba(82,78,78,0.65)]"></span>
      <span class="bg-transparent border border-[rgba(82,78,78,0.65)]"></span>
    </div>

    <div class="bg-gradient-to-b from-[#454958] to-[#454958] rounded-lg py-1 px-4 shadow-xl border border-white/10">
      <h1 class="text-cyan-400 text-sm font-bold">{title}</h1>
    </div>
    <slot/>
  </article>
</header>