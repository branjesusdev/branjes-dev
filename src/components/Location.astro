---
import LineSssquiggly from "@shared/content/LineSssquiggly.astro";
import InsetRadial from "@shared/content/InsetRadial.astro";
import HeaderTitle from "@/components/ui/HeaderTitle.astro";
---

<div class="pf-location--overview group relative">

  <InsetRadial width="300px" addClass="opacity-0 group-hover:opacity-40 group-hover:animate-jump-in animate-once"/>
  <HeaderTitle title="Location"/>

  <section
    class="mt-16 inner-content inner-content--space flex flex-row justify-between items-center"
  >
    <div class="absolute inset-0 flex items-center justify-center -z-50">
      <div
        class="h-full w-full [mask-image:linear-gradient(black_1%,transparent)] rounded-full"
      >
        <LineSssquiggly />
      </div>
    </div>

    <h1 class="font-bold text-sky-100">Fusagasugá, Colombia</h1>
    <span class="text-3xl">🌤️</span>
  </section>
</div>
