---
import OooscillateLines from "@shared/content/OooscillateLines.astro";
import InsetRadial from "@shared/content/InsetRadial.astro";
import "@/themes/molecules/wordRotation.scss";
---

<article
  class="pf-focus--overview col-span-6 md:col-span-5 relative w-full min-h-[60dvh] animate-fade-up animate-duration-500 animate-delay-0"
>
  <OooscillateLines />

  <article class="h-full w-full flex flex-col md:flex-row gap-8">
    <figure class="m-auto w-[15rem] md:w-[28rem] relative">
      <div class="absolute inset-0 -z-10 opacity-80 contrast-50 blur-2xl">
        <InsetRadial
          width="200px"
          initBg="#67e8f93a"
          endBg="rgb(0,255,247,0.02)"
        />
      </div>

      <img
        class="object-cover object-top [transition:all_.1s_ease-in]
            hover:[filter:drop-shadow(0_0_1.3em_rgb(0,255,247,0.09))]
            rounded-[2rem] cursor-crosshair will-change-[filter]
            lg:p-2 [mask-image:linear-gradient(black_40%,transparent)] rounded-bl-[10rem] "
        src="/images/PerfilRemove.avif"
        alt="Joven programador con gafas"
        sizes="(max-width: 591px) 100vw, 591px"
        decoding="async"
        loading="eager"
        draggable="false"
        fetchpriority="high"
        width="591"
        height="556"
        data-srcset="/images/PerfilRemove600.avif 300w, /images/PerfilRemove.avif 591w"
        srcset="/images/PerfilRemove600.avif 300w, /images/PerfilRemove.avif 591w"
      />
    </figure>

    <div class="w-full h-full flex flex-col gap-8 md:gap-0 relative">
      <div class="flex flex-col justify-evenly h-full gap-8 md:gap-0">
        <!-- <h1
          class="text-xl
              tracking-tight
              text-gray-50
              sm:text-2xl
              md:text-2xl
              lg:text-3xl
              xl:text-4xl
              2xl:text-5xl"
        >ðŸ‘‹ Hello, I'm <span class="relative ">Brandol</span>
        </h1> -->

        <h1
          class="relative inline-block 
            text-xl 
            sm:text-2xl
            md:text-2xl
            lg:text-3xl
            xl:text-4xl
            2xl:text-5xl
            font-bold"
        >
        <span>ðŸ‘‹</span>
        <span class="text-transparent
            [background-size:400%_100%]
            bg-clip-text [-webkit-background-clip:text] 
            [-webkit-text-fill-color:transparent] 
            bg-text--gradient">Hello, I'm Brandol</span>
        </h1>

        <h2 class="text-lg lg:text-xl text-balance max-w-[700px]">
          <span class="text-sky-200">
            Creative problem solver with a full-stack skillset, passionate about
            mastering new technologies and crafting elegant solutions.
          </span>
        </h2>
      </div>

      <div class="flex justify-end items-center">
        <p
          class="text-right text-red-200 font-semibold text-[0.8rem] lg:text-[1rem] leading-normal max-w-[40ch]"
        >
          "A user interface is like a joke. If you have to explain it, it's not
          so good"
        </p>
      </div>
    </div>
  </article>
</article>
