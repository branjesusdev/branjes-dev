--- 
import '../themes/@global.css'

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Currinculum de un desarrollador Front-Web de Brandol Jesus Vargas">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-gradient-to-r from-[#13111c] to-[#042225] scroll-smooth overflow-x-hidden">
		<slot />
	</body>
</html>